{{#each this}}
<li class="card-item" id="{{_id}}">
    <div class="item-box" data-id="{{_id}}">
        <div class="picture-box" data-id="{{_id}}">
            {{#each images}}
            <img class="item-picture" src="{{this}}" alt="изобрвжение товара">
            {{/each}}
        </div>
        <div data-id="{{_id}}">
            <h2 class="card-item-title">{{name}}</h2>
            <div class="icon-box-star">
            </div>
            {{!-- иконки звезды --}}
        </div>
        <div class="item-box-price" data-id="{{_id}}">
            <p class="notsale-price">{{price}} ₴</p>
            <p class="price">{{price}} ₴</p>
        </div>
        <span class="icon-box-favorit" data-id="{{_id}}">
        </span>
    </div>
</li>
{{/each}}